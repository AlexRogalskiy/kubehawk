{
    "compilerOptions": {
      "noImplicitAny": true,
      // https://www.typescriptlang.org/docs/handbook/module-resolution.html
      "module": "CommonJS",
      "jsx": "react", // -> React.createElement
      // availability/ sharing of both ES modules & CommonJS
      "esModuleInterop": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": ".",
    },
    // which files we want to be included while compiling
    "include": ["src"],
}





